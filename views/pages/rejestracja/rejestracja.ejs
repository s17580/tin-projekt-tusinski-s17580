<div class="panel flex">
    <div class="panel-box rej-log-control">
        <h2 class="h2-rej-log">Zarejestruj się do AutoService CarTu</h2>
        <form class= "form-rej-log" onsubmit="return validateForm();" novalidate onsubmit="return validateForm();">

            
            <input class="fields rej-log-control" type="text" name="username" id="username" placeholder="Nazwa użytkownika" />
            <span  id="errorUsername" class="errors-text-rej-log"></span>

            
            <input class="fields rej-log-control" type="text" id="email" name="email" placeholder="E-mail">
            <span  id="errorEmail" class="errors-text-rej-log"></span>

           
            <input class="fields rej-log-control" type="password" id="password" name="password" placeholder="Hasło">
            <span  id="errorPassword" class="errors-text-rej-log"></span>

            
            <input class="fields rej-log-control" type="password" id="password2" name="password2" placeholder="Powtórz hasło">
            <span  id="errorPassword2" class="errors-text"></span>
            
            <input type="submit" value="Zarejestruj się"  class="button-rej-log"/>
            <p id="errorsSummary" class="errors-text"></p>

        </form>
    </div>
    
